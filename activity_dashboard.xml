<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"> <!-- Light background -->

    <Button
        android:id="@+id/btnAddExpenses"
        android:text="Add Expenses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#009688"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btnExpenses"
        android:text="View Expenses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#009688"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btnTrends"
        android:text="View Trends"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#00796B"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btnRewards"
        android:text="Rewards"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#00796B"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btnSetGoal"
        android:text="Set Goal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#00695C"
        android:textColor="#FFFFFF" />
</LinearLayout>