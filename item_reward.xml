<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:layout_marginBottom="8dp"
    android:background="?android:attr/selectableItemBackground"
    android:gravity="center_vertical">

    <!-- Reward Icon -->
    <ImageView
        android:id="@+id/imgRewardIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_reward_icon"
        android:contentDescription="Reward Icon"
        android:layout_marginEnd="16dp"/>

    <!-- Reward Title and Points -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textRewardName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reward Name"
            android:textSize="16sp"
            android:textColor="#34495E"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textRewardPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Points: 100"
            android:textSize="14sp"
            android:textColor="#7F8C8D"/>
    </LinearLayout>

    <!-- Reward Status: Available or Redeemed -->
    <TextView
        android:id="@+id/textRewardStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Available"
        android:textColor="#2ECC71"
        android:textSize="14sp"
        android:visibility="gone" /> <!-- Initially set as "gone" -->

</LinearLayout>