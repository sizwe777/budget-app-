<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Title for Rewards Section -->
    <TextView
        android:id="@+id/textRewardsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Rewards"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#2C3E50"
        android:layout_marginBottom="16dp"/>

    <!-- Description for Rewards -->
    <TextView
        android:id="@+id/textRewardsDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Keep track of your achievements and redeem rewards!"
        android:textSize="16sp"
        android:textColor="#7F8C8D"
        android:layout_marginBottom="24dp"/>

    <!-- TextView for Reward Achievements (to match your code reference) -->
    <TextView
        android:id="@+id/textReward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reward achievements will show up here"
        android:textSize="18sp"
        android:textColor="#34495E"
        android:layout_marginBottom="32dp"/>

</LinearLayout>