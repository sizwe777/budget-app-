<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="24dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECEFF1"> <!-- Light bluish-gray background -->

    <TextView
        android:text="Set Monthly Budget Goals"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#37474F"
        android:layout_marginBottom="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/minGoalInput"
        android:hint="Minimum Goal ($)"
        android:textColorHint="#90A4AE"
        android:textColor="#263238"
        android:backgroundTint="#009688"
        android:inputType="number"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/maxGoalValue"
        android:text="Max Goal: $5000"
        android:textSize="16sp"
        android:textColor="#455A64"
        android:layout_marginTop="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <SeekBar
        android:id="@+id/maxGoalSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:progressTint="#009688"
        android:thumbTint="#009688"/>

    <Button
        android:id="@+id/saveGoalBtn"
        android:text="Save Goals"
        android:textColor="#FFFFFF"
        android:backgroundTint="#00796B"
        android:layout_marginTop="24dp"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>